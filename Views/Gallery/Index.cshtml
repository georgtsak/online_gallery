@model IEnumerable<OnlineGallery.Models.Gallery1Model>

@{
    ViewData["Title"] = "Gallery - Index";
}

<!DOCTYPE html>
<html lang="el">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .gallery {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            gap: 10px;
            width: 1000px;
            height: 500px;
            margin: auto;
        }

            .gallery img {
                width: 100%;
                height: 100%;
                object-fit: cover;
                border-radius: 8px;
            }
    </style>
</head>
<body>

    <div class="container text-center mt-5">
        <h2>Gallery Puzzle</h2>
        <div class="gallery">
            @foreach (var image in new string[]
            {
            "/img/art1.jpg",
            "/img/art2.jpg",
            "/img/art3.jpg",
            "/img/art4.jpg",
            "/img/art1a.jpg",
            "/img/art5.jpg",
            "/img/art6.jpg",
            "/img/art7.jpg",
            })
            {
                <img src="@image" alt="Gallery Image">
            }
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
