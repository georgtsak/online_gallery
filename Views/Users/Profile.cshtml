@model ProfileModel
<style>
    .artworks-grid {
        grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
        margin-top: 10px;
    }

    .card-img-top {
        object-fit: cover;
        height: 200px;
    }

    .card-body {
        padding-right: 20px;
        padding-left:20px;
        height: 150px;
        overflow: hidden;
    }

    .card-title, .card-text {
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    .card-title {
        font-size: 1.25rem;
    }

    .card-text {
        font-size: 1rem;
    }


</style>
<div class="text-center mb-4">
    <button class="btn btn-primary me-2" onclick="showSection('artworks')">MyArtworks</button>
    <button class="btn btn-secondary" onclick="showSection('profile')">MyProfile</button>
</div>

<div id="artworksSection">
    <h3>My Artworks</h3>
    @if (Model.Artworks.Any())
    {
        <div class="row">
            @foreach (var artwork in Model.Artworks)
            {
                <div class="col-md-4 mb-3">
                    <div class="card">
                        <img src="@artwork.ImageUrl" class="card-img-top" alt="@artwork.Title" />
                        <div class="card-body">
                            <h5 class="card-title">@artwork.Title</h5>
                            <p class="card-text">@artwork.Description</p>
                            <p class="text-muted">€@artwork.Price</p>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <p>You have not uploaded any artworks yet.</p>
    }
</div>



<div id="profileSection" style="display:none;">
    <h3>My Profile Info</h3>
    <ul class="list-group">
        <li class="list-group-item"><strong>Email:</strong> @Model.User.Email</li>
        <li class="list-group-item"><strong>Full Name:</strong> @Model.User.FullName</li>
        <li class="list-group-item"><strong>Role:</strong> @Model.User.Role</li>
    </ul>
</div>

<script>
    function showSection(section) {
        document.getElementById('artworksSection').style.display = section === 'artworks' ? 'block' : 'none';
        document.getElementById('profileSection').style.display = section === 'profile' ? 'block' : 'none';
    }
</script>
