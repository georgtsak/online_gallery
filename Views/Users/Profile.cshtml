@model ProfileModel

<link rel="stylesheet" href="~/css/profile.css" />

<div class="text-center mb-4">
    <button class="btn btn-dark me-2 active" id="artworks_button" onclick="showSection('artworks')">MyArtworks</button>
    <button class="btn btn-dark" id="profile_button" onclick="showSection('profile')">MyProfile</button>
</div>

<div id="artworks_section">
    <div class="d-flex justify-content-between align-items-center mb-2">
        <h3>My Artworks</h3>
        <button class="btn btn-outline-secondary" id="toggle_layout" onclick="toggleLayout()">Switch Layout</button>
    </div>
    @if (Model.Artworks.Any())
    {
        <div id="artworks_container" class="row">
            @foreach (var artwork in Model.Artworks)
            {
                <div class="col-md-4 mb-3">
                    <div class="card">
                        <img src="@artwork.ImageUrl" class="card-img-top" alt="@artwork.Title" />
                        <div class="card-body">
                            <h5 class="card-title">@artwork.Title</h5>
                            <p class="card-text">@artwork.Description</p>
                            <p class="text-muted">€@artwork.Price</p>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <p>You have not uploaded any artworks yet.</p>
    }
</div>




<div id="profile_section" style="display:none;">
    <h3>My Profile Info</h3>
    <ul class="list-group">
        <li class="list-group-item"><strong>Email:</strong> @Model.User.Email</li>
        <li class="list-group-item"><strong>Full Name:</strong> @Model.User.FullName</li>
        <li class="list-group-item"><strong>Role:</strong> @Model.User.Role</li>
    </ul>
</div>

<script>
    function showSection(section) {
        document.getElementById('artworks_section').style.display = 'none';
        document.getElementById('profile_section').style.display = 'none';

        document.getElementById('artworks_button').classList.remove('active');
        document.getElementById('profile_button').classList.remove('active');

        if (section === 'artworks') {
            document.getElementById('artworks_section').style.display = 'block';
            document.getElementById('artworks_button').classList.add('active');
        } else if (section === 'profile') {
            document.getElementById('profile_section').style.display = 'block';
            document.getElementById('profile_button').classList.add('active');
        }
    }

    function toggleLayout() {
        const container = document.getElementById('artworks_container');
        container.classList.toggle('list-view');
    }


    // energopoihsh artworks_section - arxikh fortwsh
    document.addEventListener('DOMContentLoaded', function () {
        showSection('artworks');
    });

</script>
