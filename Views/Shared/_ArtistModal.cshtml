@model ArtistModalModel

<div class="modal fade" id="artistModal-@Model.Artist.Id" tabindex="-1" aria-labelledby="artistModalLabel-@Model.Artist.Id" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="artistModalLabel-@Model.Artist.Id">@Model.Artist.FullName
                    @if (Model.Artist.IsDeleted)
                    {
                        <span class="text-danger small"><em> - Deleted user</em></span>
                    }
                </h5>
                
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">

                <p><strong>Email:</strong>
                    @if (Model.Artist.IsDeleted)
                    {
                        @MaskEmail(Model.Artist.Email)
                    }
                    else
                    {
                        @Model.Artist.Email
                    }
                </p>

                <h6>Artworks:</h6>

                <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
                    @foreach (var art in Model.Artworks)
                    {
                        <div class="col">
                            <div class="card h-100">
                                <img src="@art.ImageUrl" class="card-img-top" alt="@art.Title" style="object-fit: cover; height: 200px;" />
                                <div class="card-body">
                                    <h6 class="card-title text-truncate">@art.Title</h6>
                                    <p class="card-text fw-bold">€@art.Price</p>
                                    <button type="button" class="btn btn-info" data-bs-toggle="modal" data-bs-target="#artworkModal-@art.Id">
                                        <i class="bi bi-eye"></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                        @await Html.PartialAsync("_ArtworksModal", art)
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@functions {
    public string MaskEmail(string email)
    {
        if (string.IsNullOrWhiteSpace(email)) return "";

        var parts = email.Split('@');
        if (parts.Length != 2) return email;

        var local = parts[0];
        var domain = parts[1];

        string visiblePart = local.Length >= 2 ? local.Substring(0, 2) : local;
        return $"{visiblePart}***@{domain}";
    }
}
    
